<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="vertical">
    
    <TextView
        android:text="General"
        style="@style/default_header" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_button"/>
    
    <LinearLayout
        style="@style/setting_wrapper">
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            
	        <TextView
	            android:id="@+id/main_title"
	            style="@style/setting_main_title"
	       		android:text="Pantry Retention"/>
	        
	        <TextView
	            android:layout_below="@id/main_title"
	            style="@style/setting_description"
	            android:text="How long to keep spoiled products in pantry" />    
            
        </RelativeLayout>

        <Spinner
            android:textStyle="bold"
            android:id="@+id/pantry_retention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:padding="0dp" />
        
    </LinearLayout>
    
    <LinearLayout
        style="@style/setting_wrapper">
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
            
            <TextView
                android:id="@+id/main_title2"
                style="@style/setting_main_title"
               	android:text="Notification Frequency" />
            
            <TextView
                android:layout_below="@id/main_title2"
                style="@style/setting_description"
                android:text="How often to receive notifications" />
            
        </RelativeLayout>

        <Spinner
            android:textStyle="bold"
            android:id="@+id/notification_frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:padding="0dp" />
        
    </LinearLayout>
    
    <TextView
        android:text="About"
        style="@style/default_header"
        android:layout_marginTop="10dp" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue_button"/>
    
    <RelativeLayout
        style="@style/setting_wrapper">
        
        <TextView
            android:id="@+id/version_number"
            android:text="v1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignParentRight="true"
           	android:layout_marginLeft="10dp"
           	android:textStyle="bold"
           	android:textSize="18sp" />
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/main_title2"
                style="@style/setting_main_title"
               	android:text="Version Number" />
            
        </RelativeLayout>
        
        
    </RelativeLayout>
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="\u00A9 2014 Penguin Inc"
        android:textStyle="bold"
        android:gravity="center" />
</LinearLayout>