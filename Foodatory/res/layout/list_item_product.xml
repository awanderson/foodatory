<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_card">
    
    <LinearLayout
        android:id="@+id/extra_info_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/product_qty_wrapper"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: "
                android:textSize="16sp"
                android:textColor="@color/list_sub_item" />
            
            <TextView
                android:layout_marginLeft="5dp"
		        android:id="@+id/product_qty"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/list_sub_item"
		        android:textSize="16sp"
		        android:textStyle="bold" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/product_freshness_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh Length: "
                android:textSize="16sp"
                android:textColor="@color/list_sub_item" />
            
            <TextView
                android:layout_marginLeft="5dp"
		        android:id="@+id/product_freshness"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/list_sub_item"
		        android:textSize="16sp"
		        android:textStyle="bold"
		        android:paddingBottom="5dp" />
            
        </LinearLayout>
        
        
    </LinearLayout> 
    
    <TextView
        android:id="@+id/product_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/extra_info_wrapper"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="24sp"
        android:textStyle="bold" />
    
</RelativeLayout>